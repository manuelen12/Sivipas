<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundusuarios"
    tools:context="co.quindio.sena.tutorialwebservice.fragments.RegistrarUsuarioFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout2"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">



        <Spinner
            android:id="@+id/campoCargos"
            android:layout_width="319dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="200dp"
            android:gravity="center"
            android:hint="Cargo"
            android:textColorHint="#060606"
            android:textStyle="bold"
            android:typeface="serif"
            android:entries="@array/rol"
            />

        <EditText
            android:id="@+id/campoRol"
            android:layout_width="319dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edittextstyle"
            android:hint="Nombre"
            android:inputType="textAutoComplete"
            android:textColorHint="#060606"
            android:textStyle="bold"
            android:typeface="serif"
            />


        <EditText
            android:id="@+id/campoContra"
            android:layout_width="319dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittextstyle"
            android:gravity="center"
            android:hint="ContraseÃ±a"
            android:inputType="textPassword"
            android:textColorHint="#060606"
            android:textStyle="bold"
            android:typeface="serif"
            />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <Button
            android:id="@+id/btnRegistrar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/linearLayout2"
            android:layout_marginLeft="145dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/registrar"/>

        <Button
        android:id="@+id/btnActualizar"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="13dp"
        android:gravity="center"
        android:background="@drawable/actualiz"
        android:onClick="onclickActualizar"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    </LinearLayout>

</RelativeLayout>
