<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@drawable/consultasgenerales"
             tools:context="co.quindio.sena.tutorialwebservice.fragments.ConsultasGeneralFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">


    <EditText
        android:id="@+id/campoDocumento"
        android:layout_width="319dp"
        android:layout_height="60dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"
        android:textColorHint="#060606"
        android:gravity="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:digits="1234567890 "
        android:ems="9"
        android:maxLength="10"
        android:inputType="number"
        android:background="@drawable/edittextstyle"
        android:typeface="serif"
        android:layout_marginTop="199dp"
        android:hint="Numero De Documento"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/btnconsult"
            />

    </LinearLayout>

</RelativeLayout>
