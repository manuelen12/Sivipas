<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/generarreporte"
    tools:context="co.quindio.sena.tutorialwebservice.fragments.ReporteIncidenteFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="12dp"
            android:id="@+id/layoutRegistrarFactorRiesgo"
            >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="22dp"
                android:layout_marginTop="199dp"
                android:typeface="serif"
                android:textColor="#060606"
                android:gravity="center"
                android:text="SERVICIO QUE REPORTA:"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <Spinner
                android:id="@+id/campoServicio"
                android:layout_marginTop="2dp"
                android:layout_gravity="center"
                android:spinnerMode="dialog"
                android:layout_marginBottom="2dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
            </Spinner>


            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="22dp"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:text="EL EVENTO ESTA RELACIONADO CON ?"
                android:textColor="#060606"
                android:textSize="20dp"
                android:textStyle="bold"
                android:typeface="serif" />


            <Spinner
                android:id="@+id/campoEvento"
                android:spinnerMode="dialog"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"></Spinner>

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="22dp"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:text="CUANDO OCURRIO EL SUCESO?"
                android:typeface="serif"
                android:textColor="#060606"
                android:textSize="20dp"
                android:textStyle="bold"/>



            <EditText
                android:id="@+id/EscribFecha"
                android:layout_gravity="center"
                android:layout_width="319dp"
                android:layout_height="60dp"
                android:layout_marginTop="22dp"
                android:background="@drawable/edittextstyle"
                android:drawableLeft="@drawable/ic_action_calendar"
                android:gravity="center"
                android:textColorHint="#060606"
                android:ems="10"
                android:textStyle="bold"
                android:typeface="serif"
                android:inputType="date"
                android:hint="YY/MM/DD"

                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:weightSum="1">
            
            




                <Button
                    android:id="@+id/btnRegistra"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:onClick="onClick"
                    android:layout_marginLeft="150dp"
                    android:layout_below="@+id/linearLayout2"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/registrar"
                    />

                <Space style="@style/espacio"/>

                <ImageButton
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/actualiz"

                    />


            </LinearLayout>

        </LinearLayout>




    </ScrollView>

</RelativeLayout>
