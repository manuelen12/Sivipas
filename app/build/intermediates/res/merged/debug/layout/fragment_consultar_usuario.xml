<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/consultarusuario"
    tools:context="co.quindio.sena.tutorialwebservice.fragments.ConsultarUsuarioFragment">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">


        <EditText
            android:id="@+id/campoDocumento"
            android:layout_width="319dp"
            android:layout_height="60dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"
            android:textColorHint="#060606"
            android:gravity="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:inputType="textPersonName"
            android:background="@drawable/edittextstyle"
            android:typeface="serif"
            android:layout_marginTop="199dp"
            android:hint="Usuario"/>

        <TextView
            android:id="@+id/txtNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/txtProfesion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="18sp"/>


    <Button
        android:id="@+id/btnConsultarUsuario"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="-40dp"
        android:background="@drawable/btnconsult"
        />

    </LinearLayout>


</RelativeLayout>