<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="modificacion.actualizarUsuarioFragment"
             android:background="@drawable/actualizarcontra">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:paddingTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <TextView
            android:id="@+id/tv_cargo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="22dp"
            android:layout_marginTop="70dp"

            android:gravity="center"
            android:text="Selecciona Cargo"
            android:textColor="#060606"
            android:textSize="23dp"
            android:textStyle="bold"
            android:typeface="serif" />

        <Spinner
            android:id="@+id/Spinner3"
            android:layout_width="330dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginTop="-24dp"
            android:spinnerMode="dialog">
        </Spinner>

        <EditText
            android:id="@+id/Edit_contraseña"
            android:textColor="#070707"
            android:typeface="serif"
            android:textSize="20dp"
            android:gravity="center"
            android:textColorHint="#060606"
            android:background="@drawable/edittextstyle"
            android:layout_marginTop="10dp"
            android:layout_width="330dp"
            android:layout_height="55dp"
            android:textStyle="bold"
            android:drawableLeft="@drawable/ic_action_name"
            android:inputType="textPassword"
            android:layout_gravity="center"
            android:hint="Modificar Contraseña"/>


        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="11dp"
            android:background="@drawable/actualiz"
            android:gravity="center"
            android:onClick="ActualizarOnClick"/>
    </LinearLayout>

</RelativeLayout>
